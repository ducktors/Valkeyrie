{
  "name": "valkeyrie",
  "version": "0.8.3",
  "description": "Type-safe key-value store with atomic transactions, Standard Schema validation and pluggable drivers.",
  "type": "module",
  "main": "dist/valkeyrie.js",
  "module": "dist/valkeyrie.js",
  "types": "dist/valkeyrie.d.ts",
  "exports": {
    ".": {
      "types": "./dist/valkeyrie.d.ts",
      "default": "./dist/valkeyrie.js"
    },
    "./KvU64": {
      "types": "./dist/kv-u64.d.ts",
      "default": "./dist/kv-u64.js"
    },
    "./driver": {
      "types": "./dist/driver.d.ts",
      "default": "./dist/driver.js"
    },
    "./serializers": {
      "types": "./dist/serializers/serializer.d.ts",
      "default": "./dist/serializers/serializer.js"
    },
    "./serializers/json": {
      "types": "./dist/serializers/json.d.ts",
      "default": "./dist/serializers/json.js"
    },
    "./serializers/v8": {
      "types": "./dist/serializers/v8.d.ts",
      "default": "./dist/serializers/v8.js"
    },
    "./serializers/bson": {
      "types": "./dist/serializers/bson.d.ts",
      "default": "./dist/serializers/bson.js"
    },
    "./serializers/msgpackr": {
      "types": "./dist/serializers/msgpackr.d.ts",
      "default": "./dist/serializers/msgpackr.js"
    },
    "./serializers/cbor-x": {
      "types": "./dist/serializers/cbor-x.d.ts",
      "default": "./dist/serializers/cbor-x.js"
    },
    "./package.json": "./package.json"
  },
  "author": "Maksim Sinik <maksim@sinik.it>",
  "license": "MIT",
  "keywords": [
    "key-value",
    "kv",
    "typescript",
    "schema-validation",
    "sqlite",
    "database",
    "atomic-transactions",
    "watch-api",
    "storage",
    "embedded-database",
    "standard-schema",
    "zod",
    "valibot",
    "arktype",
    "serialization"
  ],
  "engines": {
    "node": ">=22"
  },
  "bugs": {
    "url": "https://github.com/ducktors/valkeyrie/issues"
  },
  "homepage": "https://github.com/ducktors/valkeyrie#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ducktors/valkeyrie.git"
  },
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "build": "rimraf ./dist && tsc -p tsconfig.build.json",
    "validate-exports": "validate-package-exports --check --verify --info",
    "postbuild": "pnpm run validate-exports",
    "lint": "biome check src test",
    "fmt": "biome format src test",
    "release": "pnpm run build && changeset publish",
    "commitlint": "commitlint",
    "commit": "npx git-cz --disable-emoji",
    "prepare": "husky",
    "check-updates": "pnpm outdated --recursive --long",
    "test": "tsc && node --test ./test/*.ts",
    "test:watch": "tsc && node --watch --test ./test/*.ts",
    "test:coverage": "tsc && mkdir -p coverage && node --test --experimental-test-coverage --test-reporter=spec --test-reporter=lcov --test-reporter-destination=stdout --test-reporter-destination=coverage/lcov.info --test-coverage-exclude=src/types/** --test-coverage-exclude=test/** ./test/*.ts",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:api": "typedoc --out docs/api/generated --plugin typedoc-plugin-markdown"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/lint": "^19.8.0",
    "@commitlint/prompt": "^19.8.0",
    "@ducktors/tsconfig": "^1.0.0",
    "@types/node": "^22.13.9",
    "arktype": "^2.1.25",
    "commitlint-config-cz": "^0.13.3",
    "commitlint-plugin-function-rules": "^4.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "rimraf": "^6.0.1",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.8.2",
    "valibot": "^1.2.0",
    "validate-package-exports": "^0.8.0",
    "vitepress": "^1.6.4",
    "zod": "^4.1.12"
  },
  "files": [
    "dist"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "cbor-extract",
      "esbuild",
      "msgpackr-extract"
    ]
  },
  "peerDependencies": {
    "bson": "^6.10.3",
    "cbor-x": "^1.6.0",
    "msgpackr": "^1.11.2"
  },
  "peerDependenciesMeta": {
    "bson": {
      "optional": true
    },
    "cbor-x": {
      "optional": true
    },
    "msgpackr": {
      "optional": true
    }
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0"
  }
}